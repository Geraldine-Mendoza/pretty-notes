<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- in activities that would normally otherwise have an actionBar supplied -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- action bar text color... change! -->
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="noteTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="noteContent">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="noteHolder">

        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="listItem">
        <item name="android:background">@drawable/select_item</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="noteTitleFull">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:layout_marginStart">35dp</item>

    </style>

    <style name="noteContentFull">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

</resources>
