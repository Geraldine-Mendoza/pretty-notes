<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical"
            style="@style/listItem"

>
    <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="0dp"
            android:layout_height="match_parent"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="@android:color/transparent"
    >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/noteHolder"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/note_title"
                    tools:text="Title"
                    style="@style/noteTitle"
            />

            <TextView
                android:id="@+id/note_content"
                style="@style/noteContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Content of note is a description of the qualities of something maybe related to the note." />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>